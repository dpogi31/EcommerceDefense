@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"  />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
        </form>
    </div>
</div>
<style>
    /* Light Mode - Enhance visibility */
    .form-control {
        background-color: #fff;
        color: #212529;
        border: 1px solid #ced4da;
    }

        .form-control::placeholder {
            color: #6c757d; /* darker gray for better readability */
        }

    .form-floating > label {
        color: #6c757d;
        opacity: 1 !important;
        transition: none;
    }

    .form-control:focus {
        background-color: #fff !important;
        color: #212529;
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    /* Dark mode styles */
    body.dark-mode .form-control {
        background-color: #2b2b2b;
        color: #f0f0f0;
        border: 1px solid #555;
    }

        body.dark-mode .form-control::placeholder {
            color: #bbb;
        }

    body.dark-mode .form-floating > label {
        color: #ccc;
        opacity: 1 !important;
        transition: none;
    }

    body.dark-mode .form-control:focus {
        background-color: #2b2b2b !important;
        color: #fff;
        border-color: #888;
        box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.1);
    }
</style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
