@page
@model IndexModel
@{
    ViewData["Title"] = "Manage Account";
    Layout = "~/Views/Shared/_Layout.cshtml"; // or your custom layout
}

<section class="container py-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="list-group shadow rounded-3">
                <a class="list-group-item list-group-item-action active" asp-page="./Index">Profile</a>
                <a class="list-group-item list-group-item-action" asp-page="./Email">Email</a>
                <a class="list-group-item list-group-item-action" asp-page="./ChangePassword">Password</a>
                <a class="list-group-item list-group-item-action" asp-page="./TwoFactorAuthentication">Two-Factor Auth</a>
                <a class="list-group-item list-group-item-action text-danger" asp-page="./DeletePersonalData">Delete Account</a>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">Profile Information</h3>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
