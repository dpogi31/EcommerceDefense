@{
    ViewData["Title"] = "Order Success";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f9f9f9;">
    <div class="text-center p-5 bg-white rounded-4" style="max-width: 500px; width: 100%; box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);">
        <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 10.03a.75.75 0 0 0 1.07 0l3.992-3.992a.75.75 0 0 0-1.06-1.06L7.5 8.439 6.03 6.97a.75.75 0 0 0-1.06 1.06l2 2z" />
            </svg>
        </div>
        <h2 class="text-success fw-bold mb-3">Thank you!</h2>
        <p class="text-muted mb-4">Your order has been placed successfully. We'll notify you when it's shipped.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg w-100 shadow">Continue Shopping</a>
    </div>
</div>
