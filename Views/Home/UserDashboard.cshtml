@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    <p class="lead">Welcome to your dashboard. Start shopping, manage your cart, or view your profile settings.</p>

    <div class="list-group mt-4">
        <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">
            🛒 Browse Products
        </a>
        <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">
            🧺 View Cart
        </a>
        <a asp-area="Identity" asp-page="/Account/Manage" class="list-group-item list-group-item-action">
            👤 Manage Account
        </a>
        <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="mt-3">
            <button class="btn btn-danger w-100">🚪 Logout</button>
        </form>
    </div>
</div>
