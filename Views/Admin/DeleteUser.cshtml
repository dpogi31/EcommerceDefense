@model EcommerceDefense.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-user-times"></i> Confirm Delete</h3>
        </div>

        <div class="card-body">
            <p class="fs-5">Are you sure you want to delete the user <strong>@Model.UserName</strong>?</p>

            <form asp-action="DeleteUserConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash-alt"></i> Yes, Delete
                    </button>
                    <a asp-action="ViewUsers" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
