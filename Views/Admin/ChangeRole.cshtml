@model EcommerceDefense.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Change User Role";
}

<h2 class="text-xl font-semibold mb-4">Change Role for @Model.Email</h2>

<form asp-action="ChangeRole" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Select New Role(s):</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role"
                       class="form-check-input"
                       @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update Role</button>
    <a asp-action="ViewUsers" class="btn btn-secondary mt-2">Cancel</a>
</form>
