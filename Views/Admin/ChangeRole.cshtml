@model EcommerceDefense.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Change User Role";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Change Role for <span class="fw-light">@Model.Email</span></h3>
        </div>
        <div class="card-body">
            <form asp-action="ChangeRole" method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="mb-4">
                    <label class="form-label fw-semibold">Assign New Role(s):</label>
                    <div class="row">
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="SelectedRoles" value="@role"
                                           class="form-check-input"
                                           @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                                    <label class="form-check-label">@role</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-check-circle"></i> Update Role
                    </button>
                    <a asp-action="ViewUsers" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
