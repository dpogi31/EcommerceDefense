@model EcommerceDefense.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<div class="card shadow-sm border-0 rounded p-4 bg-light mb-4">
    <h4 class="fw-bold">@Model.Name</h4>
    <p>@Model.Description</p>
    <p><strong>Price:</strong> ₱@Model.Price</p>
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border shadow-sm" style="max-width: 250px; height: auto;" />

</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger rounded-pill px-4 me-2">
        <i class="bi bi-trash-fill me-1"></i> Yes, Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
</form>
