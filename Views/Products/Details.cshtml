@model EcommerceDefense.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm border-0 rounded p-4 bg-light">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 250px;" />
        </div>
        <div class="col-md-8">
            <h3 class="fw-bold mb-3">@Model.Name</h3>
            <p class="mb-2"><strong>Description:</strong> @Model.Description</p>
            <p class="mb-2"><strong>Price:</strong> ₱@Model.Price</p>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white rounded-pill me-2 px-4">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>
