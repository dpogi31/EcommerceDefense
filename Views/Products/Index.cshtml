@model IEnumerable<EcommerceDefense.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3 px-4 py-2 rounded-pill shadow-sm">
    <i class="bi bi-plus-circle me-2"></i> Create New
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">No products available. Click "Create New" to add one.</div>
}
else
{
    <table class="table table-hover table-bordered shadow-sm rounded-3 align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>₱@item.Price</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" style="height: 60px; border-radius: 8px;" />
                    </td>
                    <td class="text-center">
                        <div class="d-flex flex-wrap gap-2 justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-warning btn-sm text-white rounded-pill px-3">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-info btn-sm text-white rounded-pill px-3">
                                <i class="bi bi-eye-fill me-1"></i> Details
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm rounded-pill px-3">
                                <i class="bi bi-trash-fill me-1"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
