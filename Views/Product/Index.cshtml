@model List<EcommerceDefense.Models.Product>

@{
    ViewData["Title"] = "Our Products";
}

<h2 class="mt-4">Explore Our Collection</h2>
<div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text fw-bold text-primary">₱@item.Price</p>
                    <a asp-controller="Cart" asp-action="AddToCart"
                       asp-route-id="@item.Id"
                       asp-route-name="@item.Name"
                       asp-route-price="@item.Price"
                       asp-route-imageUrl="@item.ImageUrl"
                       class="btn btn-outline-dark">
                        Add to Cart
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="mt-4 text-center">
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
    </div>
}
